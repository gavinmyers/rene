<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

	<Style x:Key="FormRowSplit" TargetType="{x:Type RowDefinition}">
		<Setter Property="Height" Value="10"/>
	</Style>

	<Style x:Key="FormColumnSplit" TargetType="{x:Type ColumnDefinition}">
		<Setter Property="Width" Value="5"/>
	</Style>

	<Style x:Key="FormLabelCenter" TargetType="{x:Type Label}">
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="TextBlock.FontWeight" Value="Bold"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="Padding" Value="0,5,0,0"/>
	</Style>

	<Style x:Key="FormLabelTop" TargetType="{x:Type Label}">
		<Setter Property="HorizontalAlignment" Value="Right"/>
		<Setter Property="VerticalAlignment" Value="Top"/>
		<Setter Property="TextBlock.FontWeight" Value="Bold"/>
		<Setter Property="Margin" Value="0"/>
		<Setter Property="Padding" Value="0"/>
	</Style>

	<Style x:Key="FormBreak" TargetType="{x:Type Line}">
		<Setter Property="Margin" Value="0,15,0,0"/>
	</Style>
</ResourceDictionary>